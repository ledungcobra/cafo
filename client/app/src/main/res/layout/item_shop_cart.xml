<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/line_bottom_layout"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="1"
            android:id="@+id/tvSTT"/>

        <ImageView
            android:id="@+id/ivFoodPhotoCart"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:layout_weight="2.2"
            android:src="@drawable/ic_baseline_shopping_cart_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Mon an"
            android:textStyle="italic"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:id="@+id/tvNameFoodCart"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="15dp"
            android:src="@drawable/ic_baseline_remove_24"
            android:id="@+id/ivMinusFood"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:id="@+id/tvNumberFood"
            android:gravity="center"
            android:textSize="18sp"
            android:text="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="15dp"
            android:src="@drawable/ic_baseline_add_24"
            android:id="@+id/ivPlusFood"
            />
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Gia: "
        android:textSize="18sp"
        android:id="@+id/tvCostFood"/>
</LinearLayout>