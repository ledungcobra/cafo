<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_view"
        android:name="com.ledungcobra.cafo.fragments.RestaurantOverviewVisitedFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"

        tools:listitem="@layout/fragment_restaurant_overview_visited" />
    <ImageView
        android:id="@+id/gif_progress_bar"
        android:scaleType="fitCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_marginBottom="90dp"
        android:src="@drawable/svg_progress_animate" />
</FrameLayout>
